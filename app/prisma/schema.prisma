generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id             Int       @id @default(autoincrement())
  email          String    @unique @db.VarChar(60)
  password       String
  projects       Project[]

  sharedProjects Int[]     @map("shared_projects")

  @@map("users")
}

model Project {
  id           Int     @id @default(autoincrement())
  userId       Int     @map("user_id")
  title        String  @db.VarChar(60)
  content      String?
  fileTree     Json    @map("file_tree")

  sharedUsers  Int[]   @map("shared_users")

  user         User    @relation(fields: [userId], references: [id])

  @@index([userId])
  @@map("projects")
}