generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id             String   @id @default(uuid()) @db.Uuid
  email          String   @unique @db.VarChar(60)
  password       String
  projects       Project[]

  sharedProjects String[] @map("shared_projects") @db.Uuid

  @@map("users")
}

model Project {
  id           String   @id @default(uuid()) @db.Uuid
  userId       String   @map("user_id") @db.Uuid
  title        String   @db.VarChar(60)
  content      String?
  fileTree     Json     @map("file_tree")

  sharedUsers  String[] @map("shared_users") @db.Uuid

  user         User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@map("projects")
}